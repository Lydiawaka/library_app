<div>
  <h1>All Books</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>ISBN</th>
        <th>Availability</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td><%= book.isbn %></td>
          <td>
            <% if book.borrowings.exists? %>
              <span style="color: red;">Borrowed</span>
            <% else %>
              <span style="color: green;">Available</span>
            <% end %>
          </td>
          <td>
            <%= link_to "View Details", book_path(book) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
